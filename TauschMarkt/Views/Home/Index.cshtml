@model List<TauschMarkt.Models.ArtikelKategorie>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Kategorien</p>
            <div class="list-group">
            @foreach (var item in Model)
            {
                if (item.kat != null)
                { 
                    <a href="@item.kat.id" class="list-group-item">@item.kat.Name</a>

                }

            }

              
            </div>
        </div>
        <div class="col-md-9">
            <div class="row carousel-holder">
                <div class="col-md-12">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner" width="800" height="300">

                            
                                <div class="item active">
                                    <img class="slidimg" src="/Home/ProductPicture/?id=@ViewBag.bild1" alt="Aktualisieren Sie die Seite.">
                                </div>
                            <div class="item">
                                <img class="slidimg" src="/Home/ProductPicture/?id=@ViewBag.bild2" alt="Aktualisieren Sie die Seite.">
                            </div>
                            <div class="item">
                                <img class="slidimg" src="/Home/ProductPicture/?id=@ViewBag.bild3" alt="Aktualisieren Sie die Seite.">
                            </div>
                            
                            
                            
                        </div>
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.art != null)
                    {
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                                <div class="imageseasindex">
                                    <img alt="Aktualisieren Sie die Seite." class="thumbnailimg"  onerror="loadPicError()" src="/Home/ProductPicture/?id=@item.art.id">
                                </div>
                                    <div class="caption">
                                    <h4 class="pull-right">€@item.art.Preis</h4>
                                    <h4>
                                        <a href="/Product/ShopItem/?id=@item.art.id">@item.art.Name</a>
                                    </h4>
                                    <p>@item.art.beschreibung</p>
                                                                </div>
                                
                            </div>
                        </div>
                    }

                }
             </div>
        </div>
    </div>
</div>